    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^24.7.0",
    "esm": "^3.2.25",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.3",
    "typedoc": "^0.22.11",
    "typedoc-plugin-resolve-crossmodule-references": "^0.1.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "graphql": "^15.8.0",
