    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "esm": "^3.2.25",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.4",
    "typedoc": "^0.22.14",
    "typedoc-plugin-resolve-crossmodule-references": "^0.1.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "graphql": "^16.3.0",
