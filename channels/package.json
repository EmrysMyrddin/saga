{
  "name": "@cuillere/channels",
  "version": "0.13.0",
  "main": "dist/node/index.js",
  "types": "dist/types",
  "engines": {
    "node": ">=12"
  },
  "repository": "https://github.com/cuillerejs/cuillere",
  "author": {
    "name": "Nicolas LEPAGE",
    "url": "https://github.com/nlepage"
  },
  "license": "Apache-2.0",
  "description": "@cuillere/channels implements Go-like channels for cuillere",
  "homepage": "https://github.com/cuillerejs/cuillere/tree/master/channels",

  "scripts": {
    "lint": "yarn eslint --ext .ts src",
    "test": "jest",
    "clean:node-version": "rm -rf dist/node/$NODE_VERSION",
    "prebuild:node-version": "yarn clean:$NODE_VERSION",
    "build:node-version": "yarn tsc -p tsconfig-node$NODE_VERSION.json",
    "clean:12": "NODE_VERSION=12 yarn clean:node-version",
    "prebuild:12": "NODE_VERSION=12 yarn prebuild:node-version",
    "build:12": "NODE_VERSION=12 yarn build:node-version",
    "clean:14": "NODE_VERSION=14 yarn clean:node-version",
    "prebuild:14": "NODE_VERSION=14 yarn prebuild:node-version",
    "build:14": "NODE_VERSION=14 yarn build:node-version",
    "clean:16": "NODE_VERSION=16 yarn clean:node-version",
    "prebuild:16": "NODE_VERSION=16 yarn prebuild:node-version",
    "build:16": "NODE_VERSION=16 yarn build:node-version",
    "clean:types": "rm -rf dist/types",
    "prebuild:types": "yarn clean:types",
    "build:types": "yarn tsc -p tsconfig-types.json",
    "build:all": "yarn build:12 && yarn build:14 && yarn build:16 && yarn build:types",
    "prepublishOnly": "yarn build:all && yarn lint && yarn test",
    "ci": "yarn build:node-version && yarn build:types && yarn lint && yarn test"
  },
  "files": [
    "src",
    "dist",
    "LICENSE",
    "README.md"
  ],
  "peerDependencies": {
    "@cuillere/core": "^0.13.0"
  }
}
